<% layout("/layouts/boilerplate")%>
<body>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6 offset-md-3">
        <h3>Listing Details:</h3>
      </div>
      <div class="col-12 col-md-6 offset-md-3">
        <div class="card mt-3 show-card">
          <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
          <div class="card-body">
            <p class="card-text">
              <b><%=listing.title%></b><br>
              <%=listing.description%> <br>
              &#8377;<%= new Intl.NumberFormat('en-IN').format(listing.price) %> <br>
              <%=listing.location%> <br>
              <%=listing.country%>
            </p>
          </div>
        </div>
      </div>
      <div class="col-4 col-md-4 offset-md-3">
        <div class="btns mt-3">
          <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-12 col-md-3 add-btn mb-2 mb-md-0">Edit</a>
          <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="d-inline">
            <button class="btn btn-dark offset-4 col-12 col-md-14">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
